@keyframes bgcolor
{
    0%   {background: linear-gradient(to right, #fff , #0f0);}
    25%  {background: linear-gradient(to right, #fff, #0f0 , #fff, #0f0);}
    50%  {background: linear-gradient(to right, #fff , #0f0);}
    75%  {background: linear-gradient(to right, #fff, #0f0 , #fff, #0f0);}
    100% {background: linear-gradient(to right, #fff , #0f0);}
}
@keyframes becolor
{
  0%   {left: 0;}
  100% {left: 100%;}
}
#loadingbar {
	position: fixed;
	overflow: hidden;
	z-index: 100;
	top: 0;
	left: 0;
	width: 0;
	height: 3px;
	border-radius: 0 3px 3px 0;
	background-color: #03a9f4;
    &:before {
      content: '';
      position: absolute;
      width: 50%;
      max-width: 40px;
      height: 100%;
      background: linear-gradient(to right, rgba(0, 0, 0, 0) , #fff, rgba(0, 0, 0, 0));
      animation: becolor 5s linear 0s infinite normal;
    }
}